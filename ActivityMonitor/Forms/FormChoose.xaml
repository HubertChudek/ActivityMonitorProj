<Window x:Class="ActivityMonitor.Forms.FormChoose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActivityMonitor.Forms"
        mc:Ignorable="d"
        Title="FormChoose" Height="147" Width="359.333">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Label Content="What kind of activity do to you want to add?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="32" Width="449" FontSize="16"/>
		<ComboBox x:Name="cbxChoose" HorizontalAlignment="Left" Margin="16,47,0,0" VerticalAlignment="Top" Width="192">
			<ComboBoxItem Content="Physical activity"/>
			<ComboBoxItem Content="Meal"/>
		</ComboBox>
		<Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="230,47,0,0" VerticalAlignment="Top" Width="49" Height="22" FontSize="14" Click="BtnOK_Click"/>

	</Grid>
</Window>
